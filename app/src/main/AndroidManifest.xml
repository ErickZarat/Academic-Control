<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.erickzarat.academiccontrol">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
	<uses-permission android:name="android.permission.NETWORK"/>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>

	<application
		android:name=".app.Aplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activity.SplashScreenActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.Dark">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.MainActivity"/>
		<activity
			android:name=".activity.LoginActivity"
			android:theme="@style/AppTheme.Dark"/>
		<activity android:name=".activity.UserRegistrationActivity"/>
		<activity android:name=".activity.UserDetailsActivity"/>
		<activity
			android:name=".activity.SignupActivity"
			android:theme="@style/AppTheme.Dark"/>

		<receiver android:name=".helper.NotificationHelper"/>

		<activity android:name=".activity.PlanDetailActivity">
		</activity>
		<activity
			android:name=".activity.AddActivity"
			android:theme="@style/AppTheme.DarkAccent">
		</activity>
		<activity android:name=".activity.ActividadDetails">
		</activity>
		<activity android:name=".activity.TeacherActivity">
		</activity>
		<activity
			android:name=".activity.AddPlan"
			android:theme="@style/AppTheme.DarkAccent">
		</activity>
		<activity android:name=".activity.Calificar">
		</activity>
	</application>

</manifest>