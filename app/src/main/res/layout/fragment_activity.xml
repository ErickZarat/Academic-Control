<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.erickzarat.academiccontrol.fragment.ActividadFragment">

	<android.support.v4.widget.SwipeRefreshLayout

		android:id="@+id/swipe_refresh_layout"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<android.support.v7.widget.RecyclerView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/recycle_activity">

		</android.support.v7.widget.RecyclerView>

	</android.support.v4.widget.SwipeRefreshLayout>

	<com.sergiocasero.revealfab.RevealFAB
		android:id="@+id/fabNewActivity"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:fab_color="@color/colorAccent"
		app:fab_icon="@drawable/ic_person_add"
		app:reveal_color="@color/colorAccent"
		app:elevation="6dp"
		app:pressedTranslationZ="12dp" />

</FrameLayout>
