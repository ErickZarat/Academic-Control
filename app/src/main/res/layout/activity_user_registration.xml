<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.erickzarat.academiccontrol.activity.UserRegistrationActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/navheader"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/first_name_hint"
            android:ems="10"
            android:id="@+id/txt_first_name"
            android:layout_marginTop="81dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/second_name_hint"
            android:ems="10"
            android:id="@+id/txt_sec_name"
            android:layout_below="@+id/txt_first_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/nick_hint"
            android:ems="10"
            android:id="@+id/txt_nick"
            android:layout_below="@+id/txt_sec_name"
            android:layout_alignLeft="@+id/txt_sec_name"
            android:layout_alignStart="@+id/txt_sec_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/contrasena_hint"
            android:ems="10"
            android:id="@+id/txt_contrasena"
            android:layout_below="@+id/txt_nick"
            android:layout_alignLeft="@+id/txt_nick"
            android:layout_alignStart="@+id/txt_nick"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btnRegister"
            android:layout_below="@+id/txt_contrasena"
            android:layout_alignRight="@+id/txt_contrasena"
            android:layout_alignEnd="@+id/txt_contrasena"
            android:layout_marginTop="53dp"
            android:layout_alignLeft="@+id/txt_contrasena"
            android:layout_alignStart="@+id/txt_contrasena" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Teacher"
            android:textOff="Student"
            android:clickable="false"
            android:id="@+id/sw_teacher_rol"
            android:layout_alignLeft="@+id/txt_contrasena"
            android:layout_alignStart="@+id/txt_contrasena"
            android:layout_below="@+id/txt_contrasena"
            android:layout_alignRight="@+id/txt_contrasena"
            android:layout_alignEnd="@+id/txt_contrasena" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
