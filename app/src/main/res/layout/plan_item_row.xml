<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPonderacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="top"
            android:text="Grado"
            android:textColor="@color/textColorSecondary"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/txtTarea"
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:text="Competencia"
            android:textColor="@color/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_alignBottom="@+id/txtLogro"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/txtLogro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Materia"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/txtMateriales"
            android:layout_below="@+id/txtPonderacion"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bimestre"
            android:id="@+id/txtLogro"
            android:layout_below="@+id/txtMateriales"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre Profesor"
            android:id="@+id/txtProfesorName"
            android:layout_above="@+id/txtTarea"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
